<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:showDividers="end"
    android:divider="@color/colorAccent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="POS"
            android:id="@+id/kpostxt"
            android:textColor="@color/textdefault"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/box_border" />
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="rank"-->

        <!--android:id="@+id/rank"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:textSize="15sp"-->
        <!--android:minWidth="20dp"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center_horizontal" />-->

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/box_border">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/kteamicon"
                android:layout_weight="1"
                android:src="@drawable/team1" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Offense"
                android:id="@+id/koffensetxt"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/postxt"
                android:layout_toEndOf="@+id/postxt"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>


        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="Fantasy Points"
            android:id="@+id/kfantasytxt"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/offensetxt"
            android:layout_toEndOf="@+id/offensetxt"
            android:layout_weight="1"
            android:textColor="@color/textdefault"
            android:gravity="right"
            android:paddingRight="15dp"
            android:background="@drawable/box_border" />
    </LinearLayout>

</RelativeLayout>
